{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],
    "rootDir": "server",
    "outDir": "dist/server",
    "noEmit": false,
    "sourceMap": false
  },
  "include": ["server/**/*.ts"],
  "exclude": ["client", "shared", "node_modules"]
}
