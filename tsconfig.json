{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "preserve",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": false,
    "types": [
      "vite/client"
    ],
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "server/shared/*"
      ]
    }
  },
  "include": [
    "client/src",
    "server",
    "shared"
  ]
}
